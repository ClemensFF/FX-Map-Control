<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.collections.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import fxmapcontrol.*?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="testapp.FXMLDocumentController"
            prefHeight="750" prefWidth="1000">
    <center>
        <fxmapcontrol.Map fx:id="map" center="53.5,9" maxZoomLevel="20" onMousePressed="#handlePressed" >
            <BorderPane.margin>
                <Insets left="5" right="5" top="5" bottom="5" />
            </BorderPane.margin>
            <MapTileLayer name="OpenStreetMap" tileSource="http://{c}.tile.openstreetmap.org/{z}/{x}/{y}.png" maxZoomLevel="19" />
            <MapGraticule fx:id="mapGraticule" />
            <MapItemsControl fx:id="itemsControl" />
        </fxmapcontrol.Map>
    </center>

    <bottom>
        <HBox spacing="10" alignment="CENTER_RIGHT">
            <BorderPane.margin>
                <Insets left="5" right="5" top="0" bottom="5" />
            </BorderPane.margin>
            <Slider fx:id="zoomSlider" min="1" max="20" value="9"/>
            <Slider fx:id="headingSlider" max="360"/>
            <CheckBox fx:id="wmsCheckBox" text="WMS"/>
            <CheckBox fx:id="seamarksCheckBox" text="Seamarks"/>
            <ComboBox fx:id="tileLayerComboBox">
                <items> 
                    <FXCollections fx:factory="observableArrayList"> 
                        <String fx:value="OpenStreetMap" /> 
                        <String fx:value="OpenCycleMap" /> 
                        <String fx:value="MapQuest" /> 
<!--                        <String fx:value="Bing Maps" /> 
                        <String fx:value="Bing Images" /> 
                        <String fx:value="Bing Hybrid" /> -->
                    </FXCollections> 
                </items> 
            </ComboBox>
            <Button text="Add Item" onAction="#addItem" />  
            <Button text="Remove Item" onAction="#removeItem" />  
        </HBox>
    </bottom>
</BorderPane>
